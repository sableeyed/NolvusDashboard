<UserControl
    x:Class="Nolvus.Dashboard.Frames.Installer.v6.PerformanceFrame"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Padding="32" Background="#2E2E2E">
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="24">

            <!-- HEADER -->
            <TextBlock x:Name="LblStepText"
                       Text="Graphics and Performance Options"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="SemiBold"/>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="*,350"
                  ColumnSpacing="24">

                <!-- LEFT SCROLL AREA -->
                <ScrollViewer>
                    <Grid RowDefinitions="Auto,Auto,Auto"
                          ColumnDefinitions="*,*"
                          RowSpacing="24"
                          ColumnSpacing="24">



                        <!-- ==================================================== -->
                        <!-- RESOLUTION GROUP (Row 0, Col 0)                      -->
                        <!-- ==================================================== -->
                        <Border Grid.Row="0" Grid.Column="0"
                                Background="#363636"
                                BorderBrush="#555"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="16">

                            <StackPanel Spacing="16">

                                <TextBlock Text="Resolution"
                                           Foreground="#F28F1A"
                                           FontWeight="SemiBold"
                                           FontSize="16"/>


                                <!-- Screen Ratio -->
                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto">
                                    <TextBlock Text="Screen Ratio"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <ComboBox Grid.Column="1"
                                              x:Name="DrpDwnLstRatios"
                                              MinWidth="180"
                                              Background="#2E2E2E"
                                              Foreground="White"/>
                                </Grid>


                                <!-- Resolution -->
                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto">
                                    <TextBlock Text="Resolution"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <ComboBox Grid.Column="1"
                                              x:Name="DrpDwnLstScreenRes"
                                              MinWidth="180"
                                              Background="#2E2E2E"
                                              Foreground="White"/>

                                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                               Text="The resolution must match your monitor. Use downscaling below if you want to play at a lower resolution."
                                               Foreground="#CCCCCC"
                                               TextWrapping="Wrap"
                                               Margin="0,8,0,0"/>
                                </Grid>


                                <!-- Downscaling -->
                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto">
                                    <TextBlock Text="Downscaling"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <ToggleSwitch Grid.Column="1"
                                                  x:Name="TglBtnDownScale"/>

                                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                               Text="Not compatible with DLAA/FSR/Frame Generation"
                                               Foreground="#F28F1A"
                                               TextWrapping="Wrap"
                                               Margin="0,8,0,0"/>

                                    <!-- Downscaled Res -->
                                    <Grid Grid.Row="2"
                                          ColumnDefinitions="150,*"
                                          RowDefinitions="Auto"
                                          IsEnabled="{Binding IsChecked, ElementName=TglBtnDownScale}">
                                        <TextBlock Text="Downscaled Resolution"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"/>
                                        <ComboBox Grid.Column="1"
                                                  x:Name="DrpDwnLstDownscalingScreenRes"
                                                  MinWidth="180"
                                                  Background="#2E2E2E"
                                                  Foreground="White"/>
                                    </Grid>
                                </Grid>

                            </StackPanel>
                        </Border>



                        <!-- ==================================================== -->
                        <!-- GRAPHICS GROUP (Row 1, Col 0)                        -->
                        <!-- ==================================================== -->
                        <Border Grid.Row="1" Grid.Column="0"
                                Background="#363636"
                                BorderBrush="#555"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="16">

                            <StackPanel Spacing="16">

                                <TextBlock Text="Graphics"
                                           Foreground="#F28F1A"
                                           FontWeight="SemiBold"
                                           FontSize="16"/>


                                <!-- Anti-Aliasing -->
                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto">
                                    <TextBlock Text="Anti-Aliasing"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>

                                    <ComboBox Grid.Column="1"
                                              x:Name="DrpDwnLstAntiAliasing"
                                              MinWidth="180"
                                              Background="#2E2E2E"
                                              Foreground="White"/>

                                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                               Text="DLAA only available on Nvidia RTX."
                                               Foreground="#F28F1A"
                                               TextWrapping="Wrap"
                                               Margin="0,8,0,0"/>
                                </Grid>


                                <!-- INI Profile -->
                                <Grid ColumnDefinitions="150,*">
                                    <TextBlock Text="INI Profile"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <ComboBox Grid.Column="1"
                                              x:Name="DrpDwnLstIni"
                                              MinWidth="180"
                                              Background="#2E2E2E"
                                              Foreground="White"/>
                                </Grid>


                                <!-- LODs -->
                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto">
                                    <TextBlock Text="LODs"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <ComboBox Grid.Column="1"
                                              x:Name="DrpDwnLstLODs"
                                              MinWidth="180"
                                              Background="#2E2E2E"
                                              Foreground="White"/>
                                </Grid>


                                <!-- Frame Generation -->
                                <Grid ColumnDefinitions="150,*">
                                    <TextBlock Text="Frame Generation (Unimpl 3.7.10)"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <ToggleSwitch Grid.Column="1"/>
                                </Grid>

                            </StackPanel>
                        </Border>



                        <!-- ==================================================== -->
                        <!-- VARIANT GROUP (Row 0–1, Col 1)                      -->
                        <!-- ==================================================== -->
                        <Border Grid.Row="0" Grid.Column="1"
                                Grid.RowSpan="2"
                                Background="#363636"
                                BorderBrush="#555"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="16">

                            <StackPanel Spacing="16">

                                <TextBlock Text="Variant"
                                           Foreground="#F28F1A"
                                           FontWeight="SemiBold"
                                           FontSize="16"/>


                                <!-- Variant Selection -->
                                <Grid ColumnDefinitions="150,*">
                                    <TextBlock Text="Variant"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <ComboBox Grid.Column="1"
                                              x:Name="DrpDwnLstVariant"
                                              DisplayMemberBinding="{Binding Name}"
                                              MinWidth="180"
                                              Background="#2E2E2E"
                                              Foreground="White"/>
                                </Grid>


                                <!-- Properties (Textures/Trees/Cities) -->
                                <StackPanel Spacing="6">

                                    <Grid ColumnDefinitions="150,*">
                                        <TextBlock Text="Textures:"
                                                   Foreground="White"/>
                                        <TextBlock Grid.Column="1"
                                                   x:Name="LblTextures"
                                                   Foreground="#F28F1A"/>
                                    </Grid>

                                    <Grid ColumnDefinitions="150,*">
                                        <TextBlock Text="Trees:"
                                                   Foreground="White"/>
                                        <TextBlock Grid.Column="1"
                                                   x:Name="LblTrees"
                                                   Foreground="#F28F1A"/>
                                    </Grid>

                                    <Grid ColumnDefinitions="150,*">
                                        <TextBlock Text="Towns and Cities:"
                                                   Foreground="White"/>
                                        <TextBlock Grid.Column="1"
                                                   x:Name="LblCities"
                                                   Foreground="#F28F1A"/>
                                    </Grid>

                                </StackPanel>


                                <!-- SR Exterior Cities -->
                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto">
                                    <TextBlock Text="SR Exterior Cities"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <ToggleSwitch Grid.Column="1"
                                                  x:Name="TglBtnSREX"/>

                                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                               Text="Removes loading screens entering/exiting major cities. Very heavy on CPU/GPU."
                                               Foreground="#F28F1A"
                                               TextWrapping="Wrap"
                                               Margin="0,8,0,0"/>
                                </Grid>


                                <!-- Preview -->
                                <Grid ColumnDefinitions="150,*">
                                    <TextBlock Text="Preview"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <Button Grid.Column="1"
                                            x:Name="BtnVariantPreview"
                                            MinWidth="160"
                                            Content="View variant differences"
                                            Foreground="White"/>
                                </Grid>


                                <!-- Note -->
                                <TextBlock Text="A dedicated Skyrim INI profile exists for SR Exterior Cities to maintain acceptable performance."
                                           Foreground="#CCCCCC"
                                           TextWrapping="Wrap"/>

                            </StackPanel>
                        </Border>



                        <!-- ==================================================== -->
                        <!-- HARDWARE GROUP (Row 2, Col 0–1)                    -->
                        <!-- ==================================================== -->
                        <Border Grid.Row="2" Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Background="#363636"
                                BorderBrush="#555"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="16">

                            <StackPanel Spacing="16">

                                <TextBlock Text="Hardware Requirement"
                                           Foreground="#F28F1A"
                                           FontWeight="SemiBold"
                                           FontSize="16"/>

                                <TextBlock x:Name="LblSelRes"
                                           Foreground="White"
                                           FontWeight="Bold"/>


                                <!-- CPU / GPU / RAM / VRAM grid -->
                                <Grid ColumnDefinitions="150,*,*"
                                      RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                                      ColumnSpacing="12"
                                      RowSpacing="6">

                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                               Text="Minimum"
                                               Foreground="White"
                                               FontWeight="Bold"/>

                                    <TextBlock Grid.Row="0" Grid.Column="2"
                                               Text="Recommended"
                                               Foreground="White"
                                               FontWeight="Bold"/>


                                    <TextBlock Grid.Row="1" Text="CPU" Foreground="White"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LblMinCPU" Foreground="#F28F1A"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2" x:Name="LblMaxCPU" Foreground="#F28F1A"/>

                                    <TextBlock Grid.Row="2" Text="GPU" Foreground="White"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LblMinGPU" Foreground="#F28F1A"/>
                                    <TextBlock Grid.Row="2" Grid.Column="2" x:Name="LblMaxGPU" Foreground="#F28F1A"/>

                                    <TextBlock Grid.Row="3" Text="RAM" Foreground="White"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="LblMinRAM" Text="16 GB" Foreground="#F28F1A"/>
                                    <TextBlock Grid.Row="3" Grid.Column="2" x:Name="LblMaxRAM" Text="32 GB" Foreground="#F28F1A"/>

                                    <TextBlock Grid.Row="4" Text="VRAM" Foreground="White"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="LblMinVRAM" Foreground="#F28F1A"/>
                                    <TextBlock Grid.Row="4" Grid.Column="2" x:Name="LblMaxVRAM" Foreground="#F28F1A"/>
                                </Grid>


                                <!-- Installation & Download Sizes -->
                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto" RowSpacing="6">

                                    <TextBlock Text="Installation Size:" Foreground="White"/>
                                    <TextBlock Grid.Column="1" x:Name="LblMinInstallSize" Foreground="#F28F1A"/>

                                    <TextBlock Grid.Row="1" Text="Download Size:" Foreground="White"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LblMinDownloadSize" Foreground="#F28F1A"/>

                                </Grid>

                            </StackPanel>
                        </Border>

                    </Grid>
                </ScrollViewer>



                <!-- RIGHT PANEL -->
                <Border Grid.Column="1"
                        Background="#363636"
                        BorderBrush="#444"
                        CornerRadius="4"
                        Padding="16">

                    <Grid RowDefinitions="*,Auto">

                        <ScrollViewer Grid.Row="0">
                            <StackPanel Spacing="12">

                                <TextBlock Text="This new Nolvus version has several performance-oriented options to better match your hardware."
                                           Foreground="#CCCCCC"
                                           TextWrapping="Wrap"/>

                                <TextBlock Text="DLAA anti-aliasing is only available for NVIDIA RTX cards; fallback is TAA."
                                           Foreground="#CCCCCC"
                                           TextWrapping="Wrap"/>

                                <TextBlock Text="Adjust resolution, variants, LODs and INI profiles to fit your configuration."
                                           Foreground="#CCCCCC"
                                           TextWrapping="Wrap"/>

                                <TextBlock Text="Requirements here are estimations only. Real performance varies."
                                           Foreground="#F28F1A"
                                           TextWrapping="Wrap"/>

                                <TextBlock Text="Current hardware configuration:"
                                           Foreground="White"
                                           Margin="0,16,0,4"/>

                                <StackPanel Spacing="6">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="GPU:" Foreground="White"/>
                                        <TextBlock x:Name="LblGPUs" Foreground="#F28F1A"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="CPU:" Foreground="White"/>
                                        <TextBlock x:Name="LblCPU" Foreground="#F28F1A"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="RAM:" Foreground="White"/>
                                        <TextBlock x:Name="LblRAM" Foreground="#F28F1A"/>
                                    </StackPanel>
                                </StackPanel>

                                <Button x:Name="BtnSupportedGPUs"
                                        Content="View supported GPUs"
                                        MinWidth="160"
                                        Foreground="White"
                                        Margin="0,12,0,0"/>

                            </StackPanel>
                        </ScrollViewer>

                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Spacing="8"
                                    Margin="0,24,0,0">

                            <Button x:Name="BtnPrevious"
                                    Content="Previous"
                                    MinWidth="120"
                                    Foreground="White"/>

                            <Button x:Name="BtnContinue"
                                    Content="Continue"
                                    MinWidth="120"
                                    Foreground="White"/>

                        </StackPanel>

                    </Grid>
                </Border>

            </Grid>

        </Grid>
    </Border>

</UserControl>
