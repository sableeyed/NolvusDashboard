<UserControl
    x:Class="Nolvus.Dashboard.Frames.StartFrame"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#FFFFFF">


  <Grid RowDefinitions="Auto,*,Auto" Margin="32" Background="White">

    <!-- Header -->
    <TextBlock Text="Welcome to Nolvus Dashboard"
               Foreground="White"
               FontSize="28"
               HorizontalAlignment="Center"
               Margin="0,12,0,24"/>

    <!-- Center Content -->
    <StackPanel Grid.Row="1" Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">
      <TextBlock Text="This is the Start Frame." Foreground="#CCCCCC" FontSize="16" HorizontalAlignment="Center"/>
      <TextBlock Text="(We will add installer, checks, etc. later.)" Foreground="#777" FontSize="14" HorizontalAlignment="Center"/>
    </StackPanel>

    <!-- Footer -->
    <TextBlock Grid.Row="2" Text="Status messages will appear in the status bar below."
               Foreground="#666"
               HorizontalAlignment="Center"
               Margin="0,24,0,0"/>
  </Grid>

</UserControl>
