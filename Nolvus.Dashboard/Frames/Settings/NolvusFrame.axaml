<UserControl
    x:Class="Nolvus.Dashboard.Frames.Settings.NolvusFrame"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Nolvus.Dashboard.Frames.Settings">

    <Border 
        Padding="32"
        Background="#2E2E2E">

        <Grid RowDefinitions="Auto,Auto,Auto,*"
              RowSpacing="24">

            <!-- Section Header -->
            <TextBlock Text="Nolvus Credentials"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="SemiBold"/>

            <!-- Username Row -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="Auto,16,*"
                  VerticalAlignment="Center">

                <TextBlock Text="Username"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="16"/>

                <TextBox x:Name="TxtBxUserName"
                         Grid.Column="2"
                         MinWidth="320"
                         MaxWidth="320"
                         HorizontalAlignment="Left"
                         Background="#363636"
                         Foreground="White"
                         BorderBrush="#444"
                         MinHeight="32"/>
            </Grid>

            <!-- Password Row -->
            <Grid Grid.Row="2"
                  ColumnDefinitions="Auto,16,*"
                  VerticalAlignment="Center">

                <TextBlock Text="Password"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="16"/>

                <TextBox x:Name="TxtBxPassword"
                         Grid.Column="2"
                         MinWidth="320"
                         MaxWidth="320"
                         Background="#363636"
                         HorizontalAlignment="Left"
                         Foreground="White"
                         BorderBrush="#444"
                         PasswordChar="*"
                         MinHeight="32"/>
            </Grid>

            <!-- Message Label -->
            <TextBlock x:Name="LblCheck"
                       Grid.Row="3"
                       Margin="0,0,0,60"
                       Foreground="White"
                       FontSize="14"
                       IsVisible="False"
                       TextWrapping="Wrap"/>

            <!-- Bottom Buttons -->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="8"
                            Margin="0,24,0,0">

                    <Button x:Name="BtnPrevious"
                            Content="Previous"
                            MinWidth="120"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#363636"
                            Foreground="White"/>

                    <Button x:Name="BtnContinue"
                            Content="Next"
                            MinWidth="120"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#F28F1A"
                            Foreground="Black"/>
                </StackPanel>
            </Grid>

        </Grid>

    </Border>
</UserControl>
