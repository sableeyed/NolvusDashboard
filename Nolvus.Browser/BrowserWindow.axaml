<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Nolvus.Browser.BrowserWindow"
        Width="1200" Height="800"
        Title="Nolvus Browser"
        CanResize="True">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Simple address bar for testing -->
    <StackPanel Orientation="Horizontal" Margin="8" Spacing="8">
      <TextBox x:Name="AddressBox" Width="900" Watermark="Enter URLâ€¦" />
      <Button x:Name="GoButton" Content="Go" Width="80"/>
      <Button x:Name="DevToolsButton" Content="DevTools" Width="100"/>
    </StackPanel>

    <!-- Host panel where we will add AvaloniaCefBrowser in code -->
    <Panel x:Name="BrowserHost" Grid.Row="1"/>
  </Grid>
</Window>
