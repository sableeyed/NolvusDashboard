<UserControl
    x:Class="Nolvus.Dashboard.Frames.Installer.v6.GPUFrame"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="#2E2E2E" Padding="16">
        <Grid RowDefinitions="Auto,*"
              RowSpacing="16">

            <TextBlock x:Name="LblStepText"
                       Grid.Row="0"
                       Text="Supported GPUs"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>

            <Grid Grid.Row="1"
                  ColumnDefinitions="*,320"
                  ColumnSpacing="16">

                <Border Grid.Column="0"
                        Background="#363636"
                        BorderBrush="#444"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8">

                    <DataGrid x:Name="GPUsGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowHeight="28"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              Background="#363636"
                              Foreground="White">

                        <DataGrid.Columns>

                            <DataGridTextColumn
                                Header="GPU"
                                Binding="{Binding GPU}"
                                Width="2*"/>

                            <DataGridTextColumn
                                Header="VRAM"
                                Binding="{Binding VRAM}"
                                Width="*"/>

                            <!-- No icons. Yes/No only -->
                            <DataGridTextColumn
                                Header="Supported"
                                Binding="{Binding Supported}"
                                Width="*"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <Border Grid.Column="1"
                        Background="#363636"
                        BorderBrush="#444"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12">

                    <Grid RowDefinitions="Auto,Auto,*,Auto"
                          RowSpacing="12">

                        <TextBlock x:Name="label4"
                                   Grid.Row="0"
                                   Text="List of supported GPUs"
                                   FontSize="14"
                                   Foreground="White"/>

                        <StackPanel Grid.Row="1" Spacing="6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="Variant" Foreground="White"/>
                                <TextBlock x:Name="LblVariant" Foreground="#F28F1A"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="Resolution" Foreground="White"/>
                                <TextBlock x:Name="LblResolution" Foreground="#F28F1A"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="SR Exterior Cities" Foreground="White"/>
                                <TextBlock x:Name="LblSREX" Foreground="#F28F1A"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Image x:Name="ImgWarning" Width="32" Height="32"/>
                                <TextBlock Text="Warning"
                                           FontSize="16"
                                           Foreground="#F28F1A"/>
                            </StackPanel>

                            <TextBlock x:Name="label5"
                                       TextWrapping="Wrap"
                                       Foreground="White">
                                The requirements listed in the table on the left are for a smooth and stable
                                experience with the selected variant, resolution and SR Exterior Cities setting.
                                If your GPU is below the recommended specifications, you may experience stuttering
                                or instability.
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Row="3"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button x:Name="BtnBack"
                                    Content="Back"
                                    MinWidth="90"
                                    Padding="12,6"
                                    Background="#363636"
                                    Foreground="White"
                                    BorderBrush="White"
                                    BorderThickness="1"/>
                        </StackPanel>

                    </Grid>
                </Border>

            </Grid>
        </Grid>
    </Border>
</UserControl>
