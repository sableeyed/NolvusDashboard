<UserControl
    x:Class="Nolvus.Dashboard.Frames.Instance.InstancesFrame"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Nolvus.Dashboard.Controls;assembly=NolvusDashboard"
    Background="#363636"
    Width="726" Height="410">

    <Grid RowDefinitions="Auto,* ,Auto" ColumnDefinitions="*">

        <!-- Top InstancePanel (fills entire main area) -->
        <controls:InstancesPanel x:Name="InstancesPanel"
                                 Grid.Row="0"
                                 Margin="3,3,3,6"/>

        <!-- Separator line -->
        <Border Grid.Row="1"
                Background="White"
                Height="1"
                Margin="17,0,17,0"/>

        <!-- Bottom buttons -->
        <Grid Grid.Row="2" Margin="0,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Right-aligned bottom buttons -->
            <Button x:Name="BtnPatreon"
                             Grid.Column="1"
                             Content="Patreon"
                             Width="90" Height="40"
                             Margin="5,0"
                             Background="#363636"
                             BorderBrush="White"
                             Foreground="White"/>

            <Button x:Name="BtnDonate"
                             Grid.Column="2"
                             Content="Donate"
                             Width="90" Height="40"
                             Margin="5,0"
                             Background="#363636"
                             BorderBrush="White"
                             Foreground="White"/>

            <Button x:Name="BtnDiscord"
                             Grid.Column="3"
                             Content="Discord"
                             Width="90" Height="40"
                             Margin="5,0"
                             Background="#363636"
                             BorderBrush="White"
                             Foreground="White"/>

            <Button x:Name="BtnNewInstance"
                             Grid.Column="4"
                             Content="Add Instance"
                             Width="114" Height="40"
                             Margin="5,0"
                             Background="#363636"
                             BorderBrush="White"
                             Foreground="White"/>

        </Grid>

    </Grid>

</UserControl>
