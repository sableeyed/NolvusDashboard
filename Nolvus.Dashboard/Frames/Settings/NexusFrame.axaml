<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Nolvus.Dashboard.Frames.Settings.NexusFrame"
    Background="Transparent">

  <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">
    
    <!-- HEADER + INSTRUCTIONS -->
    <StackPanel Grid.Row="0" Margin="24,24,24,12" Spacing="8">
      <TextBlock Text="Nexus Authentication" 
                 FontSize="32" 
                 Foreground="#FFF"
                 FontWeight="SemiBold"/>

      <StackPanel Orientation="Horizontal" Spacing="4">
        <TextBlock Text="Click the button below to authenticate using Nexus SSO."
                   Foreground="#CCCCCC"
                   FontSize="16"/>

        <TextBlock Text="Click"
                   Foreground="#CCCCCC"
                   FontSize="16"/>

        <TextBlock Text="here"
                   Foreground="#F28F1A"
                   Classes="link"
                   Cursor="Hand"
                   PointerPressed="OpenNexusInfo"
                   FontSize="16"/>

        <TextBlock Text="for more info."
                   Foreground="#CCCCCC"
                   FontSize="16"/>
      </StackPanel>
    </StackPanel>

    <!-- MAIN AUTH BUTTON -->
    <StackPanel Grid.Row="1" HorizontalAlignment="Left" Spacing="16">

      <Button x:Name="BtnAuthenticate"
              Content="Nexus SSO Authentication"
              FontSize="20"
              MinWidth="260"
              Margin="20,0,0,0"
              HorizontalContentAlignment="Center"
              VerticalContentAlignment="Center"
              Padding="12" />

      <!-- MESSAGE PANEL -->
      <Border x:Name="PnlMessage"
              Background="#D9534F"
              CornerRadius="4"
              Padding="8"
              IsVisible="False"
              Width="872"
              MaxWidth="872"
              Margin="20,12,0,0">
        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
          <Image x:Name="PicBox"
                 Width="24" Height="24"
                 Source="{x:Null}"/>
          <TextBlock x:Name="LblMessage"
                     Text="[Message]"
                     FontSize="14"
                     Foreground="White"
                     VerticalAlignment="Center"
                     TextWrapping="Wrap"/>
        </StackPanel>
      </Border>

    </StackPanel>

    <!-- FOOTER BUTTONS (BOTTOM RIGHT) -->
    <StackPanel Grid.Row="2" Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="24,12,24,24"
                Spacing="8">

      <Button x:Name="BtnPrevious"
              Content="Previous"
              HorizontalContentAlignment="Center"
              VerticalContentAlignment="Center"
              Background="#2E2E2E"
              BorderBrush="White"
              Foreground="White"
              MinWidth="90"/>

      <Button x:Name="BtnNext"
              Content="Next"
              HorizontalContentAlignment="Center"
              VerticalContentAlignment="Center"
              Background="#2E2E2E"
              BorderBrush="#F28F1A"
              Foreground="#F28F1A"
              MinWidth="90"/>

    </StackPanel>

  </Grid>
</UserControl>
