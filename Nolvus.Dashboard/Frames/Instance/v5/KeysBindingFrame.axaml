<UserControl
    x:Class="Nolvus.Dashboard.Frames.Instance.v5.KeysBindingFrame"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="10">

        <!-- ======================
             KEYBOARD GROUP (Border)
             ====================== -->
        <Border Grid.Row="0"
                BorderBrush="White"
                BorderThickness="2"
                Padding="10"
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Keyboard"
                           Foreground="White"
                           FontSize="18"
                           Margin="0,0,0,10"/>

                <Image Source="avares://NolvusDashboard/Assets/DefaultKeyboardKeys.jpg"
                       Stretch="Uniform"
                       Width="1000"
                       Height="300"/>
            </StackPanel>
        </Border>

        <!-- ======================
             MOUSE GROUP (Border)
             ====================== -->
        <Border Grid.Row="1"
                BorderBrush="White"
                BorderThickness="2"
                Padding="10"
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Mouse"
                           Foreground="White"
                           FontSize="18"
                           Margin="0,0,0,10"/>

                <Image Source="avares://NolvusDashboard/Assets/DefaultMouseKey.png"
                       Stretch="Uniform"
                       Width="300"
                       Height="250"/>
            </StackPanel>
        </Border>

        <!-- ======================
             SETTINGS GROUP (Border)
             ====================== -->
        <Border Grid.Row="2"
                BorderBrush="White"
                BorderThickness="2"
                Padding="10"
                Margin="0,0,0,10">
            <StackPanel Spacing="6">

                <TextBlock Text="Settings"
                           Foreground="White"
                           FontSize="18"
                           Margin="0,0,0,10"/>

                <!-- Simple text rows to replace labels -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Everything can be setup in the base game controls menu, except"
                               Foreground="White"/>
                </StackPanel>

                <!-- Block -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Block:" Foreground="White"/>
                    <TextBlock Text="   Valhalla Combat MCM menu + Dual Wield Parrying"
                               Foreground="#F28F1A" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- iEquip -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="iEquip / Cycling:" Foreground="White"/>
                    <TextBlock Text="iEquip MCM menu"
                               Foreground="#F28F1A" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Dodge -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Dodge:" Foreground="White"/>
                    <TextBlock Text="TK Dodge RE ini file"
                               Foreground="#F28F1A" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Power Attack -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Power Attack:" Foreground="White"/>
                    <TextBlock Text="One Click Power Attack ini file"
                               Foreground="#F28F1A" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- UI -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="UI:" Foreground="White"/>
                    <TextBlock Text="Widget mod MCM menu"
                               Foreground="#F28F1A" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Easy Wheel -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Easy Wheel:" Foreground="White"/>
                    <TextBlock Text="Easy Wheel MCM menu"
                               Foreground="#F28F1A" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Quick Light -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Quick Light:" Foreground="White"/>
                    <TextBlock Text="Quick Light MCM menu"
                               Foreground="#F28F1A" Margin="10,0,0,0"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- ======================
             BACK BUTTON
             ====================== -->
        <Button Grid.Row="3"
                x:Name="BtnBack"
                Content="Back"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Width="120"
                Height="40"
                Background="#363636"
                Foreground="White"
                Margin="0,10,0,0"/>
    </Grid>

</UserControl>
