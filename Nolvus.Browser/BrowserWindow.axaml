<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Nolvus.Browser.BrowserWindow"
        Width="1200" Height="800"
        Title="Nolvus Browser"
        CanResize="True">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Title bar placeholder (replace with your real control later) -->
    <Border Grid.Row="0"
            Height="50"
            Background="#363636" />

    <Grid x:Name="BrowserHost"
          Grid.Row="1"
          ClipToBounds="True" />
  </Grid>
</Window>
