<UserControl
    x:Class="Nolvus.Dashboard.Frames.Installer.PageFileFrame"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="#2E2E2E" Padding="32">
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="24">

            <!-- HEADER -->
            <TextBlock x:Name="LblStepText"
                       Text="Swap Size Configuration"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="SemiBold"/>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="*,350"
                  ColumnSpacing="24">

                <!-- LEFT PANEL -->
                <Border Background="#363636"
                        BorderBrush="#444"
                        CornerRadius="4"
                        Padding="16">

                    <ScrollViewer>
                        <StackPanel Spacing="16">

                            <!-- Warning Icon -->
                            <Image Source="avares://NolvusDashboard/Assets/Warning-Message.png"
                                   HorizontalAlignment="Left"
                                   Width="32"
                                   Height="32"/>

                            <!-- Main description -->
                            <TextBlock Text="To improve system stability and avoid crashes, especially if you only have 16 GB of RAM, it is recommended to configure your swap size."
                                       Foreground="White"
                                       TextWrapping="Wrap"/>

                            <!-- Link line (same pattern as ENBFrame) -->
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="Click"
                                           Foreground="White"/>
                                <TextBlock x:Name="LnkPageFile"
                                           Text="here"
                                           Foreground="#F28F1A"
                                           Classes="link"
                                           Cursor="Hand"
                                           PointerPressed="LnkPageFile_PointerPressed"/>
                                <TextBlock Text="for more information on changing your swap size."
                                           Foreground="White"/>
                            </StackPanel>

                            <!-- Secondary note -->
                            <TextBlock Text="This setup will require a reboot. You can do this after installation, but do not forget to do it before playing the game."
                                       Foreground="White"
                                       TextWrapping="Wrap"/>

                        </StackPanel>
                    </ScrollViewer>

                </Border>

                <!-- RIGHT PANEL -->
                <Border Grid.Column="1"
                        Background="#363636"
                        BorderBrush="#444"
                        CornerRadius="4"
                        Padding="16">

                    <Grid RowDefinitions="*,Auto">

                        <!-- Info text on the right -->
                        <TextBlock Text="Configure your swap size according to the tutorial to ensure system stability while running Nolvus."
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"/>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Spacing="8"
                                    Margin="0,24,0,0">

                            <Button x:Name="BtnPrevious"
                                    Content="Previous"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    MinWidth="90"
                                    Background="#2E2E2E"
                                    BorderBrush="White"
                                    Foreground="White"/>

                            <Button x:Name="BtnContinue"
                                    Content="Continue"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    MinWidth="90"
                                    Background="#2E2E2E"
                                    BorderBrush="#F28F1A"
                                    Foreground="#F28F1A"/>

                        </StackPanel>

                    </Grid>

                </Border>

            </Grid>

            <!-- Bottom spacer (optional) -->
            <Border Grid.Row="2" Height="1"/>

        </Grid>
    </Border>

</UserControl>
