<UserControl
    x:Class="Nolvus.Dashboard.Frames.Installer.CDNFrame"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="#2E2E2E" Padding="32">
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="24">

            <!-- HEADER -->
            <TextBlock x:Name="LblStepText"
                       Text="CDN Location"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="SemiBold"/>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="*,350"
                  ColumnSpacing="24">

                <!-- LEFT PANEL -->
                <Border Background="#363636"
                        BorderBrush="#444"
                        CornerRadius="4"
                        Padding="16">

                    <ScrollViewer>
                        <StackPanel Spacing="16">

                            <!-- Download location row: label + dropdown -->
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">

                                <TextBlock x:Name="LblDownLoc"
                                           Text="Download location"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>

                                <ComboBox x:Name="DrpDwnLstDownLoc"
                                          Width="260"
                                          SelectionChanged="OnCDNLocationChanged"
                                          Background="#2E2E2E"
                                          Foreground="White"/>
                            </StackPanel>

                            <!-- Orange info text -->
                            <TextBlock Text="Only works for Nexus Mods and not for other file hosting websites Nolvus connects to."
                                       Foreground="#F28F1A"
                                       TextWrapping="Wrap"/>

                        </StackPanel>
                    </ScrollViewer>

                </Border>

                <!-- RIGHT PANEL -->
                <Border Grid.Column="1"
                        Background="#363636"
                        BorderBrush="#444"
                        CornerRadius="4"
                        Padding="16">

                    <Grid RowDefinitions="*,Auto">

                        <!-- Info text -->
                        <TextBlock Text="Select your preferred download area. This can improve download speed and stability depending on your location."
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"/>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Spacing="8"
                                    Margin="0,24,0,0">

                            <Button x:Name="BtnPrevious"
                                    Content="Previous"
                                    VerticalContentAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    MinWidth="120"
                                    Foreground="White"/>

                            <Button x:Name="BtnContinue"
                                    Content="Continue"
                                    VerticalContentAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    MinWidth="120"
                                    Foreground="White"/>

                        </StackPanel>

                    </Grid>

                </Border>

            </Grid>

            <!-- Bottom spacer -->
            <Border Grid.Row="2" Height="1"/>

        </Grid>
    </Border>

</UserControl>
