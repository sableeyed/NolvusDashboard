<UserControl
    x:Class="Nolvus.Dashboard.Frames.Installer.ChangeLogFrame"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gif="clr-namespace:Avalonia.Labs.Gif;assembly=Avalonia.Labs.Gif"
    Background="#363636">

    <Grid RowDefinitions="*,Auto" Margin="4">

        <!-- CONTENT PANEL -->
        <Border Grid.Row="0"
                x:Name="Content"
                Background="#2E2E2E"
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="0">

				<Grid x:Name="LoadingOverlay" IsVisible="True" Grid.RowSpan="4" Background="#80000000">
					<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
						<gif:GifImage Width="150" Height="150" Source="avares://NolvusDashboard/Assets/cog-loader-alpha.gif" />
					</StackPanel>
				</Grid>

        </Border>

        <!-- BOTTOM BUTTON BAR -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8"
                    Margin="0,6,6,6">

            <Button x:Name="BtnPrevious"
                    MinWidth="90"
                    Content="Back"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Background="#2E2E2E"
                    BorderBrush="White"
                    Foreground="White"/>

            <Button x:Name="BtnContinue"
                    MinWidth="90"
                    Content="Update"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="#2E2E2E"
                    BorderBrush="#F28F1A"
                    Foreground="#F28F1A"/>
        </StackPanel>

    </Grid>
</UserControl>
